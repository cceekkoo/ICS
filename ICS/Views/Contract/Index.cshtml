@using ICS.Models
@model ICS.Models.Merge.ContractMerge
@{
    List<Site_Contents> site_Contents = Model.site_Contents.ToList();
}

@if (ViewBag.MessageSend != null)
{
    <script type="text/javascript">
        $(window).on('load', function () {
            $('#myModal').modal('show');
        });
    </script>
}

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">@ViewBag.MessageSend</h4>
            </div>
        </div>
    </div>
</div>
<!-- start top_bg -->
<div class="top_bg">
    <div class="wrap">
        <div class="top">
            <h2 class="header-font">@Model.menu</h2>
        </div>
    </div>
</div>

<div class="wrap">
    <div class="main">
        <div class="contact">
            <div class="contact-form">
                <div class="content">
                    <h2 class="col-md-10 col-md-offset-1 text-center">@site_Contents[10].Text</h2>
                    <p class="col-md-10 col-md-offset-1 text-center download-link">
                        <a href="~/Content/files/contract_form.doc">@site_Contents[12].Text</a>
                    </p>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" });
                    <div class="col-md-4 col-md-offset-1">
                        <div>
                            <span>
                                <label>
                                    @site_Contents[0].Text
                                    @Html.ValidationMessageFor(model => model.contract.Company_Name, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Company_Name,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[0].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[1].Text
                                    @Html.ValidationMessageFor(model => model.contract.Company_Manager, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Company_Manager,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[1].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[2].Text
                                    @Html.ValidationMessageFor(model => model.contract.Address, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Address,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[2].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[3].Text
                                    @Html.ValidationMessageFor(model => model.contract.Company_VOEN, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Company_VOEN,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[3].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[4].Text
                                    @Html.ValidationMessageFor(model => model.contract.Bank_Name, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Bank_Name,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[4].Text } })
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-2">
                        <div>
                            <span>
                                <label>
                                    @site_Contents[5].Text
                                    @Html.ValidationMessageFor(model => model.contract.Settlement_Account, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Settlement_Account,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[5].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[6].Text
                                    @Html.ValidationMessageFor(model => model.contract.Code, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Code,
                       new { htmlAttributes = new { @class = "textbox", @type = "text", @placeholder = site_Contents[6].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[7].Text
                                    @Html.ValidationMessageFor(model => model.contract.Bank_VOEN, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Bank_VOEN,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[7].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[8].Text
                                    @Html.ValidationMessageFor(model => model.contract.Correspondent_Account, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Correspondent_Account,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[8].Text } })
                            </span>
                        </div>
                        <div>
                            <span>
                                <label>
                                    @site_Contents[9].Text
                                    @Html.ValidationMessageFor(model => model.contract.Swift, "", new { @class = "text-danger" })
                                </label>
                            </span>
                            <span>
                                @Html.EditorFor(model => model.contract.Swift,
                       new { htmlAttributes = new { @class = "textbox", @placeholder = site_Contents[9].Text } })
                            </span>
                        </div>
                    </div>

                    <div class="col-md-4 col-md-offset-1">
                        <div class="g-recaptcha" data-sitekey="6Lc5Vh8UAAAAAGm9fLgVDjRwMQGNQmquy1GmRvKp"></div>
                        <div>
                            <span><input type="submit" value="@site_Contents[11].Text"></span>
                        </div>
                    </div>
                }
            </div>

            <div class="clear"> </div>
        </div>
    </div>
</div>

<script src="~/Content/js/jquery.validate.min.js"></script>
<script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>
<script src="https://www.google.com/recaptcha/api.js?hl= + @Model.captchaLanguage" async defer></script>

