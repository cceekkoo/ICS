@model ICS.Models.Merge.FooterPartialMerge
<!-- start footer -->
<div class="footer_bg">
    <div class="wrap">
        <div class="footer">
            <!-- start span_of_4 -->
            <div class="span_of_4">
                <div class="span1_of_4">
                    <h4>@Model.about.Title</h4>
                    <p class="btm">@Model.about.Text.Split('.')[0].</p>
                </div>
                <div class="span1_of_4" style="float:right;">
                    <h4>@Model.site_Contents.ToList()[0].Text</h4>
                    @foreach (var item in Model.address)
                    {
                        <p class="btm1 @item.Address.icon">@Html.Raw(item.Text)</p>
                    }
                    @foreach (var item in Model.contact)
                    {
                        <p class="btm1 @item.icon">@item.Text</p>
                    }
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>

<!-- start footer -->
<div class="footer_bg1">
    <div class="wrap">
        <div class="footer1">
            <!-- scroll_top_btn -->            
            <a href="#" id="toTop" style="display: block;"><span id="toTopHover" style="opacity: 1;"></span></a>
            <!--end scroll_top_btn -->
            <div class="social-icons" style="padding:0">
                <ul>
                    @foreach (var item in Model.social)
                    {
                        <li><a href="@item.Url" target="_blank" style="background: url(../../Content/images/@item.image);"></a></li>
                    }                   
                </ul>
            </div>
            <div class="copy">
                <p class="link"><span>@Model.site_Contents.ToList()[1].Text<a href=""></a></span></p>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
