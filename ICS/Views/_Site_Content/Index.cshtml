@model ICS.Models.AdminMerge.Site_ContentsAdminMerge

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="TranslateModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("CreateTranslate", null))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Yeni tərcümə</h4>
                </div>

                <div class="modal-body scrollbar">
                    <div class="content-row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            <div class="hidden">
                                @Html.HiddenFor(model => model.site_Content.ID)
                            </div>
                            <div class="col-md-5">
                                <label>
                                    Basliq az
                                    @Html.ValidationMessageFor(model => model.site_Content.Text, "", new { @class = "text-danger" })
                                </label>
                                @Html.EditorFor(model => model.site_Content.Text, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="col-offset-md-5 col-md-5">
                                <label>
                                    Dil
                                    @Html.ValidationMessageFor(model => model.site_Content.Language_ID, "", new { @class = "text-danger" })
                                </label>
                                <select class="form-control valid" id="Language_ID" name="Language_ID">
                                    @if (ViewBag.Translated != null)
                                    {
                                        foreach (var item in Model.languages.Where(x => !(ViewBag.Translated as int[]).Contains(x.ID)))
                                        {
                                            <option value="@item.ID">@item.Language_Short</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Ləğv et</button>
                    <button type="submit" class="btn btn-primary">Təsdiqlə</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<div id="EditModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("Edit", null))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Redaktə</h4>
                </div>

                <div class="modal-body scrollbar">
                    <div class="content-row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            <div class="hidden">
                                @Html.HiddenFor(model => model.site_Content.ID)
                            </div>
                            <div class="col-md-5">
                                <label>
                                    Basliq az
                                    @Html.ValidationMessageFor(model => model.site_Content.Text, "", new { @class = "text-danger" })
                                </label>
                                @Html.EditorFor(model => model.site_Content.Text, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Ləğv et</button>
                    <button type="submit" class="btn btn-primary">Təsdiqlə</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<div id="ViewModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Ətraflı</h4>
            </div>

            <div class="modal-body scrollbar">
                <div class="row content-row">
                    <table class="table table-bordered table-striped table-modal">
                        <tr>
                            <td class="border" width="20%">Image1</td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Bağla</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<!-- /.modal -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            HAQQIMIZDA
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row content-row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="hidden">ID</th>
                                    <th>Icon</th>
                                    <th></th>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.site_Contents)
                                {
                                    string color = "";
                                    int language_ID = item.Language_ID;
                                    if (language_ID == 1)
                                    {
                                        color = "az";
                                    }
                                    <tr class="@color">
                                        <td class="hidden">@item.ID</td>

                                        <td>@item.Text</td>

                                        <td>
                                            <button type="button" class="grid-buttons btn-edit" title="Redaktə"
                                                    data-toggle="modal" data-target="#EditModal"></button>
                                            <button type="button" class="grid-buttons btn-view" title="Ətraflı"
                                                    data-toggle="modal" data-target="#ViewModal"></button>
                                            @if (item.Language_ID == Model.defaultLanguageID && Model.site_Contents.Count(x => x.Value_ID == item.Value_ID) < Model.languages.Count() + 1)
                                            {
                                                <button type="button" class="grid-buttons btn-translate" title="Tərcümə əlavə et"
                                                        data-toggle="modal" data-target="#TranslateModal"></button>
                                            }
                                        </td>
                                        <td class="hidden">@item.Value_ID</td>
                                        <td class="hidden">@item.Language_ID</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th class="hidden">ID</th>
                                    <th>Icon</th>
                                    <th></th>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
    $(window).on('load', function () {
        $("#@ViewBag.ShowModal").modal('show');
    });
</script>